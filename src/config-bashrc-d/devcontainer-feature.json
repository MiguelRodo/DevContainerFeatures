{
    "name": "Configure bashrc.d",
    "id": "config-bashrc-d",
    "version": "1.0.1",
    "description": "Source files in .bashrc.d",
    "postCreateCommand": "/usr/local/bin/config-bashrc-d-post-create-command",
    "options": {
        "sourceBashrcD": {
            "type": "boolean",
            "description": "Whether to ensure ~/.bashrc.d files are used by .bashrc. Default is true", 
            "default": true
        }
    }
}
